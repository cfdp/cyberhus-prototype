body
  color text
  font-size 16px
  font-family 'Nunito', sans-serif;
  font-weight 100
  line-height 1.6em
  background bg

h1
  font-size 22px
  margin 10px 0 12px 0
  font-weight 300
  line-height 1.3em
  color #a98168

h2
  font-size 18px
  margin 20px 0 10px 0 

h3
  font-size 16px

.post
  h3  
    margin-left 65px

a
  color links
  text-decoration none

  &:hover
    cursor pointer
    text-decoration underline

header
  width 100%
  background header_bg


  .logo
    margin-top 10px
    width 172px
    height 41px
    background url("img/logo_no_text.png")
    background-size cover
    display inline-block
    img
      max-width 300px

  nav
    max-width 960px
    margin auto
    
    @media screen and (max-width: 960px)
      padding-right 20px

  .toggle_menu
    display none
    margin-top 20px
    margin-right 20px
    @media screen and (max-width: 825px)
      display inline-block
      float right
      a
        color #fff
        font-size 22px
        text-decoration none
    
  #menu
    float right

    @media screen and (max-width: 825px)
      display none

    ul
      li
        margin-top 18px
        float left
        border-left 1px solid #a88067
        &:first-child
          border 0
        a
          color text
          font-size 17px
          padding 15px 20px
          
          &:hover
            border-bottom 2px solid #fffbf8
            color #fffbf8
            text-shadow 1px 1px #888
            text-decoration none
            
#wrapper
  max-width 960px
  margin auto
  padding 5px 20px

#content-wrapper
  max-width 610px
  @media screen and (max-width: 960px)
    margin 0 auto

.breadcrumb
  font-size 14px
  margin-bottom 35px

#sidebar
  width 240px
  height 460px
  padding 20px
  float right
  margin-top 62px
  background #eee
  @media screen and (max-width: 960px)
    display none

.overview-summary
  margin-left 75px

.brevkasse-summary
  padding-bottom 20px
  border-bottom 1px solid post_info

#icon
  width 65px
  height 65px
  background url("img/icon.png")
  background-size 65px 65px
  float left
  margin 20px 10px 0 0 

.light-text
  color post_info

.inline
  margin-right: 10px

.btn
  padding 8px 10px
  color btn_text
  background btn_bg
  border-radius 3px

  &:hover 
    background btn_hover
    text-decoration none
  
.overview-btn
  margin-left 75px

time
  float right
  color post_info
  
article
  p
    margin-bottom 1em

#interaction
  margin 20px 0 80px 0
  span
    margin 5px 10px 0 0

.left
  float left

.right
  float right

.kommentar
  padding 8px 0
  margin 8px 0

.inline-komm
  margin-left 10px
