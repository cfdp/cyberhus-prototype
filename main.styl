@import url("reset.css")

text = #222
bg = url("img/paddern-bg.png")
header_bg = url("img/pattern.png")
nav_hover = #b78362
links = #1683B8
post_info = #888
btn_text = #ffffff
btn_bg = #f1975c
btn_hover = darken(btn_bg, 10%)
