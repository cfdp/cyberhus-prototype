@import url(http://fonts.googleapis.com/css?family=Nunito:400,300,700)

@import url("reset.css")

text = #333222
bg = #ffffff
header_bg = #3496d9
nav_bar = #006189
links = #657b90
post_info = #000
wrapper_bg = #f6f6f6f6
btn_text = #fff
btn_bg = #006189
btn_hover = lighten(#006189, 10%)
post_bg = #efefefef
footer = #2B2526

hr
  border 1px solid #fff

body
  color text
  font-size 14px
  font-family 'Nunito', sans-serif;
  font-weight 100
  line-height 1.6em
  background bg

h1
  font-size 24px
  margin 20px 0 10px 0
  font-weight 500
  line-height 1.3em

h2
  font-size 16px
  margin 20px 0 10px 0

a
  color links
  text-decoration none

  &:hover
    text-decoration underline

header
  width 100%
  height 114px
  background header_bg
    
  .logo
    width 610px
    margin auto
    img
      max-width 200px
      width 100%
      margin-top 20px

.navbar
    height 40px
    width 100%
    background nav_bar

nav
  font-size 12px

.overview-summary
  margin-left 75px

#icon
  width 65px
  height 65px
  background #006189
  border-radius 50%
  float left
  margin 20px 10px 0 0 

.light-text
  color post_info

#wrapper
  max-width 610px
  margin  auto
  padding  20px

.inline
  margin-right: 10px

.btn
  padding 5px 10px
  color btn_text
  background btn_bg
  font-size 14px
  &:hover 
    background btn_hover
    text-decoration none

.author
  font-size 16px
  margin-top 10px
  
.author-info
  margin-top 1px
  font-size 14px
  color post_info

#overview-opret
  margin-left 75px

time
  float right
  font-size: 14px;
  color post_info
  
article
  h2
    font-weight 400
    font-size 14px

#interaction
  margin 20px 0 80px 0
  span
    margin 5px 10px 0 0

.left
  float left

.right
  float right

#kommentarer
  line-height 1.4em

.kommentar
  margin-bottom 20px

.komm-author
  color links
  font-weight 700



#galleri-img
  text-align center

img
  margin auto
  margin-top 10px

form
  *
    margin-bottom 10px

  input
    width 120px
    height 30px
    background post_bg
    padding-left 3px
    border none


  textarea
    width 100%
    max-width 350px
    height 120px
    resize none
    background post_bg
    display block
    border none

article.post
  padding 5px 10px
  margin-top 10px
  background post_bg

  p
    margin 0

  h2
    font-size 15px
    margin 0 0 0 20px
    font-weight 500
    margin-left 65px
    
  .author-info
    margin-left 65px
    color post_info

  .arrow
    width 10px
    height 10px
    float left
    margin 17px 0 0 20px
    color black
    font-size 14px
    font-weight bold
    background url("img/arrow.png") no-repeat
    background-size contain
    &:hover
      text-decoration none
      cursor pointer

  .rotate
    -webkit-transform rotate(90deg)
    -moz-transform rotate(90deg)
    -ms-transform rotate(90deg)
    -o-transform rotate(90deg)
    transform rotate(90deg)

  .post-komm
    float right
    margin -37px 175px 0 0
    padding 3px 12px
    border 1px solid black

  .post-date
    float right
    margin -33px 5% 0 0

  .toggle-text
    display none
    margin 10px 10% 0 65px

    p
      margin-bottom 5px
    a
      margin-bottom 5px
  
footer
    width 100%
    height 200px
    margin-top 50px
    background footer
    img 
      margin-top -180px
