a
  color blue
  text-decoration none

  &:hover
    text-decoration underline

.overview-summary
  margin-left 75px

#icon
  width 65px
  height 65px
  background blue
  border-radius 50%
  float left
  margin 20px 10px 0 0 

.light-text
  color #888888

#wrapper
  max-width 610px
  margin  auto
  padding  20px
  background #ffffff

.inline
  margin-right: 10px

.btn
  padding 5px 10px
