blue = #0b5a7c

body
  color #232323
  font-size 12px
  font-family "lucida grande" "Helvetica" sans-serif
  line-height 1.4em
  background #f1f1f1

h1
  font-size 24px
  margin 20px 0 10px 0
  font-weight 400
  font-family myriad pro
  line-height 1em


h2
  font-size 16px
  margin 20px 0 10px 0

a
  color blue
  text-decoration none

  &:hover
    text-decoration underline

.light-text
  color #888888

#wrapper
  max-width 610px
  margin  auto
  padding  20px
  background #ffffff


.inline
  margin-right: 10px

.btn
  padding 5px 10px
  color #ffffff
  background blue

.author
  font-size 16px
  margin-top 10px
  font-family myriad pro
  

.author-info
  margin-top -10px
  font-size 13px
  font-family myriad pro
  color #888888

time
  font-size 12px
  float right
  color #000
  
article
  h2
    font-weight 400
    font-size 14px

#interaction
  margin 20px 0 80px 0
  span
    margin 5px 10px 0 0

.left
  float left

.right
  float right

.kommentar
  margin-bottom 20px

.komm-author
  color blue
  font-weight 700

#galleri-img
  text-align center

img
  margin auto
  margin-top 10px

form
  *
    border-radius 3px
    margin-bottom 10px
  input
    width 120px
    height 30px
    border 1px solid #aaaaaa
    padding-left 3px
  textarea
    width 350px
    height 120px
    resize none
    border 1px solid #aaaaaa
    display block