.komm-arrow
  display inline-block
  margin-left 5px
  
  &:after
    /*Add another block-level blank space*/
    content ''
    display block
 
    /*Make it a small rectangle so the border will create an L-shape*/
    width 8px
    height 8px
 
    /*Add a white border on the bottom and left, creating that 'L' */
    border solid #888
    border-width 0 2px 2px 0

    -webkit-transform rotate(45deg)
    -moz-transform rotate(45deg)
    -ms-transform rotate(45deg)
    -o-transform rotate(45deg)
    transform rotate(45deg)

#galleri-img
  text-align center

img
  margin auto
  margin-top 10px

form
  *
    margin-bottom 10px

  input
    width 120px
    height 30px
    background post_bg
    padding-left 3px
    border none


  textarea
    width 100%
    max-width 350px
    height 120px
    resize none
    background post_bg
    display block
    border none

article.post
  padding 5px 10px
  margin-top 10px
  background post_bg

  p
    margin 0

  h2
    margin 0 0 0 20px
    margin-left 65px
    
  .author-info
    margin-left 65px
    color post_info

  .arrow
    width 10px
    height 10px
    float left
    margin 18px 0 0 20px
    color black
    font-weight bold
    background url("img/arrow.png") no-repeat
    background-size contain
    &:hover
