@import url(http://fonts.googleapis.com/css?family=Nunito:400,300,700)

@import url("reset.css")

text = #222222
bg = #f6f6f6f6
header_bg = #a98168
nav_bar = lighten(header_bg, 40%)
links = #657b90
post_info = #888
wrapper_bg = #f6f6f6f6
btn_text = #eeeeee
btn_bg = #f1975c
btn_hover = darken(btn_bg, 20%)
post_bg = #eeeeee
footer = #2B2526

body
  color text
  font-size 14px
  font-family 'Nunito', sans-serif;
  font-weight 100
  line-height 1.6em
  background bg

h1
  font-size 24px
  margin 20px 0 10px 0
  font-weight 500
  line-height 1.3em

h2
  font-size 16px
  margin 20px 0 10px 0

a
  color links
  text-decoration none

  &:hover
    cursor pointer

header
  width 100%
  height 120px
  background header_bg

  .logo
    width 960px
    margin auto
    img
      max-width 200px
      width 100%
      margin-top 20px

nav
  height 40px
  background nav_bar
  border-bottom 1px solid header_bg
  ul
    max-width 960px
    margin  auto
    li
      margin-top 9px
      float left
      &:first-child
        border 0
      a
        color text
        padding 11px 32px
        border-left 1px solid #b5a9a0
        &:hover
          background header_bg


.breadcrumb
  font-size 12px

#wrapper
  max-width 960px
  margin  auto

#content-wrapper
  max-width 610px
  padding-top 20px

#sidebar
  width 280px
  height 800px
  float right
  margin-top 30px
  background nav_bar 

.overview-summary
  margin-left 75px

#icon
  width 65px
  height 65px
  background url("img/icon.png")
  background-size 65px 65px
  float left
  margin 20px 10px 0 0 

.light-text
  color post_info

.inline
  margin-right: 10px

.btn
  padding 5px 10px
  color btn_text
  background btn_bg
  font-size 14px
  &:hover 
    background btn_hover
    text-decoration none

.author
  font-size 16px
  margin-top 10px
  font-family myriad pro
  
.author-info
  margin-top 1px
  font-size 14px
  color post_info

#overview-opret
  margin-left 75px

time
  float right
  font-size: 14px;
  color post_info
  
article
  h2
    font-weight 400
    font-size 14px

#interaction
  margin 20px 0 80px 0
  span
    margin 5px 10px 0 0

.left
  float left

.right
  float right

.kommentar
  padding 8px 0
  margin 8px 0

.inline-komm
  margin-left 10px
  //display none
  .kommentar
    border-left 1px solid lighten(links, 70%)
    padding 8px 10px

.komm-author
  font-weight 700

.komm-komm
  margin-top 5px

.nr-komm
  color links
  border 1px solid links
  padding 0 10px
  margin-right 5px

.se-komm
  cursor pointer
  color links
  &:hover
    text-decoration underline

#galleri-img
  text-align center

img
  margin auto
  margin-top 10px

form
  *
    margin-bottom 10px

  input
    width 120px
    height 30px
    background post_bg
    padding-left 3px
    border none


  textarea
    width 100%
    max-width 350px
    height 120px
    resize none
    background post_bg
    display block
    border none

article.post
  padding 5px 10px
  margin-top 10px
  background post_bg

  p
    margin 0

  h2
    font-size 14px
    margin 0 0 0 20px
    font-weight normal
    margin-left 65px
    
  .author-info
    margin-left 65px
    color post_info

  .arrow
    width 10px
    height 10px
    float left
    margin 11px 0 0 20px
    color black
    font-size 14px
    font-weight bold
    background url("img/arrow.png") no-repeat
    background-size contain
    &:hover
      text-decoration none
      cursor pointer

  .rotate
    -webkit-transform rotate(90deg)
    -moz-transform rotate(90deg)
    -ms-transform rotate(90deg)
    -o-transform rotate(90deg)
    transform rotate(90deg)

  .post-komm
    float right
    margin -37px 35% 0 0
    padding 3px 12px
    background url("img/speech.png")
    background-repeat no-repeat
    background-position-y 3px 
    background-position-x 1px 

  .post-date
    float right
    margin -34px 5% 0 0

  .toggle-text
    display none
    margin 10px 10% 0 65px

    p
      margin-bottom 5px
    a
      margin-bottom 5px

footer
    width 100%
    height 200px
    margin-top 100px
    background footer
    img 
      margin-top -180px
